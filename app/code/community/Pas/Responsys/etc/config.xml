<?xml version="1.0"?>
<config>
    <modules>
        <Pas_Responsys>
            <version>0.3.0</version>
        </Pas_Responsys>
    </modules>
    <global>
        <models>
            <responsys>
                <class>Pas_Responsys_Model</class>
                <resourceModel>responsys_resource</resourceModel>
            </responsys>
            <responsys_resource>
                <class>Pas_Responsys_Model_Resource</class>
            </responsys_resource>
            <customer>
                <rewrite>
                    <customer>Pas_Responsys_Model_Customer</customer>
                </rewrite>
            </customer>
        </models>
        <resources>
            <responsys_customer_setup>
                <setup>
                    <module>Pas_Responsys</module>
                    <class>Pas_Responsys_Model_Resource_Customer_Setup</class>
                </setup>
            </responsys_customer_setup>
            <responsys_product_setup>
                <setup>
                    <module>Pas_Responsys</module>
                    <class>Pas_Responsys_Model_Resource_Product_Setup</class>
                </setup>
            </responsys_product_setup>
        </resources>
        <helpers>
            <responsys>
                <class>Pas_Responsys_Helper</class>
            </responsys>
        </helpers>
        <events>
            <responsys_new_customer>
                <observers>
                    <responsys>
                        <type>singleton</type>
                        <class>responsys/observer</class>
                        <method>flagCustomerSync</method>
                    </responsys>
                </observers>
            </responsys_new_customer>
            <catalog_product_save_after>
                <observers>
                    <responsys>
                        <type>singleton</type>
                        <class>responsys/observer</class>
                        <method>flagProductSync</method>
                    </responsys>
                </observers>
            </catalog_product_save_after>
            <customer_import_finish_before>
                <observers>
                    <responsys>
                        <type>singleton</type>
                        <class>responsys/observer</class>
                        <method>importFinished</method>
                    </responsys>
                </observers>
            </customer_import_finish_before>
        </events>
    </global>
    <crontab>
        <jobs>
            <responsys_customer_cron>
                <schedule>
                    <!-- Every 5 minutes -->
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>responsys/observer::runCustomerCron</model>
                </run>
            </responsys_customer_cron>
            <responsys_product_cron>
                <schedule>
                    <!-- Every 4 hours -->
                    <cron_expr>0 */4 * * *</cron_expr>
                </schedule>
                <run>
                    <model>responsys/observer::runProductCron</model>
                </run>
            </responsys_product_cron>
        </jobs>
    </crontab>
</config>